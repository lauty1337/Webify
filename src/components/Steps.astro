---
import type { ActionAPIContext } from "astro:actions"
import StepItem from "../components/StepItem.astro"




const steps = [
    {
        step: '01',
        title: 'Consulta inicial',
        description: 'Conversamos sobre tus objetivos, necesidades y vision. Definimos alcance, tiempo y presupuesto del proyecto',
        icon: 'lupa',
    },
    {
        step: '02',
        title: 'Dise単o UI/UX',
        description: 'Se dise単a el proyecto en Figma, donde se puede modificar a gusto hasta que el dise単o sea el que estes buscando',
        icon: 'design',
    },
    {
        step: '03',
        title: 'Desarrollo',
        description: 'Transformamos el dise単o en codigo con tecnologias modernas. Optimizado para velocidad, SEO y una experiencia de usuario unica',
        icon: 'code',
    },
    {
        step: '04',
        title: 'Lanzamiento',
        description: 'Despues del testing de la pagina y deploy. Se te entrega el sitio funcionando sin costo de hosting',
        icon: 'rocket',
